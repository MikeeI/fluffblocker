 {
    "manifest_version": 2,
    "name": "Fluffblocker",
    "short_name": "Fluffblocker",
    "version": "0.0.0.8",
    "description": "Replace Facebook trending topics with news headlines.",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "storage",
        "http://*/*", 
        "https://*/*"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [{
        "js": [
            "jquery-2.1.4.min.js",
            "settings.js",
            "main.js"
        ],
        "css": ["style.css"],
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "run_at": "document_end"
    }]
}

